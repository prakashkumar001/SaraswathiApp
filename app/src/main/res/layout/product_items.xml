<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="3dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/productbg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                />




            </LinearLayout>

            <TextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="16dp"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Pop Corn"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/login_keypad_bg"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/minus_icon"
                    />



                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/quantity"
                android:layout_width="30dp"
                android:text="1"
                android:layout_gravity="center"
                android:background="@drawable/quantity_bg"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_height="30dp" />
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/plus_icon"
                    />

            </LinearLayout>

           <!-- <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/addtocart"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_buy_unselect"
                    />


                </LinearLayout>-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/price_tags_icon"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:maxLength="7"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:text="\u20B9 40"
                    />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>